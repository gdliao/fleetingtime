<urlrewrite>
	<rule>
		<note>重写/xxx.jsp成/xxx.html</note>
		<note>example：/index.html</note>
		<from>/([A-Za-z0-9]+).html</from>
		<to type="forward">/$1.jsp</to>
	</rule>
	
